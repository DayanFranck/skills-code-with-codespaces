{
  // Name this configuration
  "name": "Codespace for Skills!",
  // Use the base image from codespace
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",
  "remoteUser": "codespace",
  "overrideCommand": false,
  // Add the command to run after the container is created
  "postCreateCommand": "echo 'Welcome to your new Codespace!'",
  // Add the IDs of the extensions you want to install upon container creation.
  "customizations": {
      "vscode": {
          "extensions": [
              "GitHub.copilot"
          ]
      },
      "codespaces": {
          "openFiles": [
              "codespace.md"
          ]
      }
  }
}
